{
    "manifest_version": 2,
    "name": "Funny Joke Extension",
    "version": "1.0",
    "description": "Fetches and displays funny jokes.",
    "permissions": ["https://v2.jokeapi.dev/joke/Any"],
  
    "browser_action": {
      "default_title": "Joke Generator"
    },
  
    "icons": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    },
  
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
  }
  